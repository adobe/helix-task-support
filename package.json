{
  "name": "@adobe/helix-task-support",
  "version": "1.0.1",
  "description": "Helix Task Support",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --statements 70 --branches 40 --lines 80 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --statements 90 --branches 80 --lines 90 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-task-support"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-task-support/issues"
  },
  "homepage": "https://github.com/adobe/helix-task-support#readme",
  "dependencies": {
    "@azure/service-bus": "^1.1.7",
    "azure-storage": "^2.10.3",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.5",
    "ajv": "6.12.0",
    "codecov": "3.6.5",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "7.2.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.2",
    "jsdoc-to-markdown": "6.0.1",
    "junit-report-builder": "2.0.0",
    "lint-staged": "10.1.2",
    "lodash.pick": "4.4.0",
    "mocha": "7.1.1",
    "nyc": "15.0.1",
    "proxyquire": "2.1.3",
    "semantic-release": "17.0.4"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
