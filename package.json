{
  "name": "@adobe/helix-task-support",
  "version": "1.5.3",
  "description": "Helix Task Support",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --statements 100 --branches 100 --lines 100 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --statements 100 --branches 100 --lines 100 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-task-support"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-task-support/issues"
  },
  "homepage": "https://github.com/adobe/helix-task-support#readme",
  "dependencies": {
    "azure-storage": "^2.10.3",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.1.3",
    "ajv": "8.5.0",
    "codecov": "3.8.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.28.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.23.4",
    "jsdoc-to-markdown": "7.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "11.0.0",
    "lodash.pick": "4.4.0",
    "mocha": "8.4.0",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "17.4.3",
    "sinon": "11.1.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
